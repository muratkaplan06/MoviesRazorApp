@page "{id:int}"
@model MoviesRazorApp.Pages.MovieModel
@{
    ViewData["Title"] = "Movie Detail";
}

<h1>Movie Detail</h1>
<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <div class="card" style="width: 28rem; margin:auto">
                <div class="card-header">
                    Movie
                </div>
                <div class="card-body">
                    <div class="card-body">
                        <h5 class="card-title text-center">@Model.Movie?.Title</h5>
                        <p class="card-text text-center">@Model.Movie?.Description</p>
                        <p class="card-text">Rate: @Model.Movie?.Rate</p>
                        <a href="/Movies" class="btn btn-primary">Show All</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
