@page
@model MoviesRazorApp.Pages.MoviesModel
@{
    ViewData["Title"] = "Movies";
}

<h1>@ViewData["Title"]</h1>
<hr />

<table class="table table-striped">
    <thead>
    <tr>
        <th scope="col">
            #
        </th>
        <th scope="col">
            Title
        </th>
        <th scope="col">
            Rate
        </th>
        <th scope="col">
            Actions
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var movie in Model.Movies)
    {
        <tr>
            <th scope="row">
                @movie.Id
            </th>
            <td>
                @movie.Title
            </td>
            <td>
                @movie.Rate
            </td>
            <td>
                @* <a asp-page="./Edit" asp-route-id="@movie.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@movie.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@movie.Id">Delete</a> *@
                <a href="/Movie/@movie.Id" class="btn btn-secondary">Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<div style="position:fixed; bottom:70px; right:25px">
    @if (User.Identity.IsAuthenticated)
    {
        <a href="/AddMovie" class="btn btn-success">Add Movie</a>
    }else{
        <a href="/Login" class="btn btn-success">Add Movie</a>
    }
   
</div>
